---
import Layout from '../layouts/Layout.astro';
import Header from '../components/index/Header.astro';
import Profile from '../components/index/Profile.astro';
import Projects from '../components/index/Projects.astro';
import Products from '../components/index/Products.astro';

import Articles from '../components/index/Articles.astro';
---
<Layout>
  <Header />
  <!-- ========== MAIN CONTENT ========== -->
  <main id="content">
    <div class="w-full max-w-2xl mx-auto pt-8 md:pt-14 px-4 sm:px-6 lg:px-8">
      <Profile />
      <Projects />
      <Products />
      <!-- <Testimonials /> -->
      <!-- <Articles /> -->

      <!-- Subscribe -->
      <div class="my-10 sm:my-14 w-full">
        <iframe src="https://embeds.beehiiv.com/ed733618-a529-4639-9f48-278954569eb1?slim=true" data-test-id="beehiiv-embed" height="52" frameborder="0" scrolling="no" style="margin: 0; border-radius: 0px !important; background-color: transparent;" class="w-full"></iframe>
      </div>
      <!-- End Subscribe -->
    </div>
  </main>
  <!-- ========== END MAIN CONTENT ========== -->

  <!-- ========== FOOTER ========== -->
  <footer class="w-full max-w-2xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="py-6 border-t border-gray-200 dark:border-neutral-700">
      <div class="flex flex-wrap justify-between items-center gap-2">
        <div>
          <p class="text-sm text-gray-600 dark:text-neutral-400">
            Â© 2025 AjiPratama.com
          </p>
        </div>

        <!-- List -->
        <ul class="flex flex-wrap items-center">
          <li class="inline-block relative pe-4 text-sm last:pe-0 last-of-type:before:hidden before:absolute before:top-1/2 before:end-1.5 before:-translate-y-1/2 before:size-[3px] before:rounded-full before:bg-gray-400 dark:text-neutral-500 dark:before:bg-neutral-600">
            <a class="text-sm text-gray-500 underline hover:text-gray-800 hover:decoration-2 focus:outline-hidden focus:decoration-2 dark:text-neutral-500 dark:hover:text-neutral-400" href="https://x.com">
              X (Twitter)
            </a>
          </li>
          <li class="inline-block pe-4 text-sm">
            <a class="text-sm text-gray-500 underline hover:text-gray-800 hover:decoration-2 focus:outline-hidden focus:decoration-2 dark:text-neutral-500 dark:hover:text-neutral-400" href="https://github.com/aji-pratama">
              Github
            </a>
          </li>
        </ul>
        <!-- End List -->
      </div>
    </div>
  </footer>

  <!-- Required plugins -->
  <script src="https://cdn.jsdelivr.net/npm/preline/dist/index.js"></script>
