---
interface NavItem {
  label: string;
  href: string;
  isActive?: boolean;
}

const pathname = new URL(Astro.request.url).pathname;
const navItems: NavItem[] = [
  {
    label: "Home",
    href: "/",
    isActive: pathname === "/"
  },
  {
    label: "CV",
    href: "/cv",
    isActive: pathname === "/cv"
  }
];
---

<!-- ========== HEADER ========== -->
<header class="sticky top-0 inset-x-0 flex flex-wrap justify-center z-50 w-full text-sm">
  <nav class="mt-4 relative max-w-2xl w-full glass bg-white/60 backdrop-blur-md rounded-xl mx-2 py-2 px-4 flex items-center justify-between md:mx-auto dark:bg-neutral-900/60 shadow-lg shadow-[#4868e0]/15 dark:shadow-[#4868e0]/20 bg-gradient-to-r from-white/80 to-white/40 dark:from-neutral-900/80 dark:to-neutral-900/40 ring-1 ring-white/50 dark:ring-white/10">
    <div class="flex items-center">
      <!-- Logo -->
      <a class="flex-none rounded-md text-xl inline-block font-semibold focus:outline-hidden focus:opacity-80" href="/" aria-label="Aji Pratama">
        <div class="w-8 h-8 rounded-full bg-gradient-to-br from-[#8a55ff] via-[#4868e0] to-[#4095ff] flex items-center justify-center shadow-md shadow-[#4868e0]/30 dark:shadow-[#4868e0]/40">
          <img src="/blue.png" alt="Aji Pratama" class="w-7 h-7 rounded-full object-cover" />
        </div>
      </a>
      <!-- End Logo -->
    </div>

    <div class="flex items-center gap-3">
      {navItems.map((item) => (
        <a 
          class={`py-1.5 px-3 rounded-full transition-all duration-200 hover:scale-105 ${
            item.isActive 
              ? "bg-[#4868e0]/10 font-medium text-[#4868e0] dark:bg-[#4868e0]/20 dark:text-[#4868e0]" 
              : "text-gray-500 hover:bg-[#4868e0]/5 hover:text-[#4868e0] dark:text-neutral-400 dark:hover:text-[#4868e0] dark:hover:bg-[#4868e0]/10"
          } focus:outline-hidden`} 
          href={item.href}
          aria-current={item.isActive ? "page" : undefined}
        >
          {item.label}
        </a>
      ))}
    </div>
  </nav>
</header>
<!-- ========== END HEADER ========== -->