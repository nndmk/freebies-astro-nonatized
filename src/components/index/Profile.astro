---
interface SocialLink {
  icon: string;
  label: string;
  href: string;
}

const profile = {
  name: "Aji Pratama",
  role: "Digital Creator, Software Engineer",
  avatar: "/profile.png",
  bio: [
    "I craft and experiment with AI tools to help solopreneurs and business owner move faster",
    "Oh... Hi, I'm Aji, software engineer turned solopreneur, that's it ðŸ‘‹",
    "Check out my latest project, AI-powered something, maybe you need it?",
  ]
};

const socialLinks: SocialLink[] = [
  {
    icon: `<svg class="shrink-0 size-3.5 text-gray-800 dark:text-neutral-200" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <rect width="20" height="16" x="2" y="4" rx="2" />
            <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7" />
          </svg>`,
    label: "ajipratama.net@gmail.com",
    href: "mailto:ajipratama.net@gmail.com"
  },
  {
    icon: `<svg class="shrink-0 size-3.5 text-gray-800 dark:text-neutral-200" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
            <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
            <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line>
          </svg>`,
    label: "@ajipratamacom",
    href: "https://instagram.com/ajipratamacom"
  },
  {
    icon: `<svg class="shrink-0 size-3.5 text-gray-800 dark:text-neutral-200" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"></path>
            <rect x="2" y="9" width="4" height="12"></rect>
            <circle cx="4" cy="4" r="2"></circle>
          </svg>`,
    label: "LinkedIn",
    href: "https://www.linkedin.com/in/aji-pratama-net/"
  },
  {
    icon: `<svg class="shrink-0 size-3.5 text-gray-800 dark:text-neutral-200" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M2.5 19.5A3.5 3.5 0 0 1 6 16h12a3.5 3.5 0 0 1 3.5 3.5"></path>
            <path d="M6 16v-2a6 6 0 0 1 12 0v2"></path>
            <circle cx="12" cy="7" r="3"></circle>
          </svg>`,
    label: "Medium",
    href: "https://medium.com/@ajipratama"
  }
];
---

<!-- Profile -->
<div class="flex items-center gap-x-2">
  <div class="shrink-0">
    <img class="shrink-0 size-16 rounded-full" src={profile.avatar} alt={profile.name}>
  </div>

  <div class="grow">
    <h1 class="text-lg font-medium text-gray-800 dark:text-neutral-200">
      {profile.name}
    </h1>
    <p class="text-sm text-gray-600 dark:text-neutral-400">
      {profile.role}
    </p>
  </div>
</div>
<!-- End Profile -->

<!-- About -->
<div class="mt-6">
  {profile.bio.map((paragraph) => (
    <p class="text-base text-gray-600 dark:text-neutral-400 mt-2">
      {paragraph}
    </p>
  ))}

  <ul class="mt-5 flex flex-row gap-x-5 justify-start">
    {socialLinks.map((link, index) => {
      // Tentukan warna berdasarkan jenis social media
      let bgColor = "";
      let iconColor = "";
      
      if (link.href.includes("mailto")) {
        bgColor = "from-red-100 to-red-200 dark:from-red-900/40 dark:to-red-800/20";
        iconColor = "text-red-600 dark:text-red-400";
      } else if (link.href.includes("instagram")) {
        bgColor = "from-purple-100 to-pink-200 dark:from-purple-900/40 dark:to-pink-800/20";
        iconColor = "text-pink-600 dark:text-pink-400";
      } else if (link.href.includes("linkedin")) {
        bgColor = "from-blue-100 to-blue-200 dark:from-blue-900/40 dark:to-blue-800/20";
        iconColor = "text-blue-600 dark:text-blue-400";
      } else if (link.href.includes("medium")) {
        bgColor = "from-gray-100 to-gray-200 dark:from-gray-800/40 dark:to-gray-700/20";
        iconColor = "text-gray-700 dark:text-gray-300";
      } else {
        bgColor = "from-indigo-100 to-indigo-200 dark:from-indigo-900/40 dark:to-indigo-800/20";
        iconColor = "text-indigo-600 dark:text-indigo-400";
      }
      
      return (
        <li>
          <a class="block transition-all duration-200" href={link.href} target="_blank" title={link.label}>
            <span class={`size-10 flex items-center justify-center rounded-lg bg-gradient-to-br ${bgColor} backdrop-blur-sm border border-white/20 dark:border-neutral-700/50 shadow-sm hover:shadow-md hover:scale-110 transition-all`}>
              <Fragment set:html={link.icon.replace('size-3.5', 'size-5').replace('text-gray-800 dark:text-neutral-200', iconColor)} />
            </span>
          </a>
        </li>
      );
    })}
  </ul>

  <!-- Consultation Button -->
  <a 
    href="https://utas.me/ajipratama/consultation" 
    target="_blank"
    rel="noopener noreferrer"
    class="shadow mt-8 w-full block text-center py-3 text-sm font-medium text-white transition-colors rounded-md bg-blue-600 hover:bg-blue-900"
  >
      1-on-1 Consultation
    </span>
  </a>
</div>
<!-- End About -->
